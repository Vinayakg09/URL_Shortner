<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            font-style: italic;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page!</title>
</head>
<body>
    <h1>Hey from server</h1>
    <h1> URL Shortner</h1>
    <% if (locals.id) { %>
     <p>URL Genearated: http://localhost:8002/url/<%= id %></p>
    <% } %>
    <div>
        <form method="POST" action="/url">
            <label style="font-size: larger;">Enter your original url</label>
            <input type="url" name="URL" placeholder="https://example.com"/>
            <button type="submit">Generate</button>
        </form>
    </div>
    <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <tr>
                        <th>S. No.</th>
                        <th>ShortID</th>
                        <th>Redirect Urls</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                     <tr>
                        <td><%= index + 1 %></td>
                     <td><%= url.shortId %></td>
                     <td><%=  url.redirectUrl %></td>
                     <td><%= url.visitHistory.length %></td>
                     </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>